<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LucasAlias.NINA.NEK"
    xmlns:ctrl="clr-namespace:LucasAlias.NINA.NEK.Dockables.Controls"
    xmlns:ninaconverters="clr-namespace:NINA.Core.Utility.Converters;assembly=NINA.Core"
    xmlns:wpfutil="clr-namespace:NINA.WPF.Base.Utility;assembly=NINA.WPF.Base"
    xmlns:ninactrl="clr-namespace:NINA.CustomControlLibrary;assembly=NINA.CustomControlLibrary">

    <ResourceDictionary.MergedDictionaries>
        <wpfutil:SharedResourceDictionary Source="/NINA.WPF.Base;component/Resources/StaticResources/SVGDictionary.xaml" />
        <wpfutil:SharedResourceDictionary Source="/NINA.WPF.Base;component/Resources/StaticResources/Brushes.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <ninaconverters:InverseNullToVisibilityCollapsedConverter x:Key="InverseNullToVisibilityCollapsedConverter" />
    <ninaconverters:NullToVisibilityCollapsedConverter x:Key="NullToVisibilityCollapsedConverter" />

    <Style x:Key="TStepperControlStyle" TargetType="{x:Type ctrl:StepperControlBase}">
        <Setter Property="AddSVG" Value="{StaticResource AddSVG}" />
        <Setter Property="SubstractSVG" Value="{StaticResource SubstractSVG}" />
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}" />
        <Setter Property="ButtonForegroundBrush" Value="{StaticResource ButtonForegroundBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrl:StepperControlBase}">
                    <Grid x:Name="LayoutRoot">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="25" />
                        </Grid.ColumnDefinitions>
                        <Button Name="PART_Decrement" Height="25">
                            <Path
                                Margin="5"
                                Data="{TemplateBinding SubstractSVG}"
                                Fill="{TemplateBinding ButtonForegroundBrush}"
                                Stretch="Uniform"
                                UseLayoutRounding="True" />
                        </Button>
                        <ContentControl
                            Name="PART_ContentControl"
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Content="{Binding InnerContent, RelativeSource={RelativeSource TemplatedParent}}"
                            Visibility="{Binding InnerContent, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource NullToVisibilityCollapsedConverter}}" />
                        <ninactrl:UnitTextBox
                            x:Name="PART_Textbox"
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Text="{Binding Value, StringFormat=\{0:0.00\}, UpdateSourceTrigger=LostFocus, RelativeSource={RelativeSource TemplatedParent}}"
                            TextAlignment="Center"
                            Unit="{Binding Unit, RelativeSource={RelativeSource TemplatedParent}}"
                            Visibility="{Binding InnerContent, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource InverseNullToVisibilityCollapsedConverter}}" />
                        <Button
                            Name="PART_Increment"
                            Grid.Column="2"
                            Height="25">
                            <Path
                                Margin="5"
                                Data="{TemplateBinding AddSVG}"
                                Fill="{TemplateBinding ButtonForegroundBrush}"
                                Stretch="Uniform"
                                UseLayoutRounding="True" />
                        </Button>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type ctrl:Int64StepperControl}" BasedOn="{StaticResource TStepperControlStyle}" />
    <Style TargetType="{x:Type ctrl:UInt64StepperControl}" BasedOn="{StaticResource TStepperControlStyle}" />

</ResourceDictionary>
