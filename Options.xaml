<ResourceDictionary
    x:Class="LucasAlias.NINA.NEK.Options"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="Nikon Ekrynox SDK_Options">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Number of additional Threads" />
                <TextBox MinWidth="50" Text="{Binding NbAdditionalThreads}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Update Telescope Info if CPU Lens is mounted" />
                <TextBox MinWidth="50" Text="{Binding UpdateLensInfo}" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>